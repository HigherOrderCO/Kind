{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "kind-run",
            "type": "shell",
            "command": "kind ${fileBasenameNoExtension} --run"
        },
        {
            "label": "kind-check",
            "type": "shell",
            "command": "kind ${fileBasename}"
        },
        {
            "label": "kind-build",
            "type": "shell",
            "command": "cd web; node build"
        }
    ]
  }