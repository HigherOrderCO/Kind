App.TicTacToe.when: App.When<App.TicTacToe.State>
  (event, state)
   case event {
     mouse_up :
        open state
        let info = state.local@info
        open info
        let state = App.TicTacToe.Board.insert_entity(info.mouse_pos, App.TicTacToe.Entity.circle, state.local)        
        App.set_local!(state)
      frame : 
        open state
        App.set_local!(state.local@info <- event.info)
   } default App.pass!