App.Kaelin.Draw.draft: DOM
  heroes = List.map!!(Pair.snd!!, Map.to_list!(App.Kaelin.Resources.heroes))
  DOM.node("div", 
          {}, 
          { "width": "100vw", 
            "height": "100vh", 
            "display": "flex", 
            "flex-direction": "column", 
            "justify-content": "center", 
            "align-items": "center",
            "font-size": "2rem"
          },
          [
            App.Kaelin.Draw.draft.top,
            App.Kaelin.Draw.draft.bottom
            //DOM.node("h1", {}, {"margin-bottom": "50px"}, [DOM.text("Choose a hero")]),
            
          ]
  )




App.Kaelin.Draw.draft.top: DOM
  DOM.node("div", {},
  {"width": "100%",
   "height": "60%",
   "display": "flex"}
   [
     App.Kaelin.Draw.draft.hexes,
     App.Kaelin.Draw.draft.picks,
   ])

App.Kaelin.Draw.draft.hexes: DOM
DOM.node("div", {},
  {"width": "25%",
   "height": "100%",
   "display": "flex"}
   [])

App.Kaelin.Draw.draft.picks: DOM
DOM.node("div", {},
  {"width": "75%",
   "height": "100%",
   "display": "flex"}
  [
    App.Kaelin.Draw.draft.my_hero,
    App.Kaelin.Draw.draft.my_allies
  ])

App.Kaelin.Draw.draft.my_hero: DOM
DOM.node("div", {},
  {"width": "40%",
   "height": "100%",
   "display": "flex",
   "background-color": "cyan"
   "padding": "5%"}
      [App.Kaelin.Draw.draft.hero_card])

App.Kaelin.Draw.draft.my_allies: DOM
DOM.node("div", {},
  { "width": "60%",
    "height": "100%",
    "display": "grid",
    "grid": "100% / auto auto",
    "grid-gap": "50px",
    "padding": "50px",   
    "background-color": "green"}
    [
      App.Kaelin.Draw.draft.ally_card,
      App.Kaelin.Draw.draft.ally_card])


App.Kaelin.Draw.draft.ally_card: DOM
  DOM.node("div", {},
    {
      "width": "100%"
      "height": "100%"
      "display": "flex"
      "border": "3px solid cyan"
      "border-radius": "5px"
      "flex-direction": "column"
      "justify-content": "center", 
      "align-items": "center",
    }
    [
      DOM.node("div", {}, {"margin-top": "20px"}, [DOM.text("hero@name")]),
      DOM.node("div", {}, {"padding-top": "10%"}, [DOM.node("img", 
      {"src": App.Kaelin.Draw.draft.croni}
      {"width": "96px", "height": "96px", "image-rendering": "pixelated"}, [])])
      DOM.node("div", {}, {
      "width": "100%"
      "height": "100%"
      "display": "flex"
      "background-color": "black"} [])
    
    ])

App.Kaelin.Draw.draft.bottom: DOM
heroes = List.map!!(Pair.snd!!, Map.to_list!(App.Kaelin.Resources.heroes))
  DOM.node("div", {},
  { "width": "100%",
    "height": "40%",
    "display": "flex",
    "justify-content": "center", 
    "align-items": "center",}
   [
     DOM.node("div", {},
     {"display": "flex", "flex-wrap": "wrap", "justify-content": "center", "max-width": "70%"},
     List.map!!(App.Kaelin.Draw.draft.hero_select, heroes))
   ]
)


App.Kaelin.Draw.draft.hero_card: DOM
  DOM.node("div", {},
    {
      "width": "100%"
      "height": "100%"
      "display": "flex"
      "border": "3px solid cyan"
      "border-radius": "5px"
      "flex-direction": "column"
      "justify-content": "flex-start", 
      "align-items": "center",
    }
    [
      DOM.node("div", {}, {}, [DOM.text("hero@name")]),
      DOM.node("div", {}, {"padding-top": "10%"}, [DOM.node("img", 
      {"src": App.Kaelin.Draw.draft.croni}
      {"width": "192px", "height": "192px", "image-rendering": "pixelated"}, [])])
      DOM.node("div", {}, {
      "width": "100%"
      "height": "100%"
      "display": "flex"
      "background-color": "black"} [])
    
    ])

App.Kaelin.Draw.draft.hero_select(hero: App.Kaelin.Hero): DOM
  DOM.node("div", {"id": hero@name, "action": hero@name}, 
    { 
      "margin": "4px",
      "border": "2px solid gray",
      "box-shadow":"0 2px 3px rgba(0, 0, 0, 0.1)",
      "height": "150px",
      "width": "150px",
      "border-radius": "5px"
    }, 
    [
      DOM.node("div", {"id": hero@name, "action": hero@name}, {"display": "flex", "justify-content": "center"}, [DOM.text(hero@name)]),
      DOM.node("div", {"id": hero@name, "action": hero@name}, {"display": "flex", "justify-content": "center", "padding-top": "20%"}, 
      [
        DOM.node("div",
        {},
        {"padding": "2px", "align-self": "center"},      
        [
          DOM.node("img", 
          {"src": App.Kaelin.Draw.draft.croni, "id": hero@name, "action": hero@name}
          {"width": "48px", "height": "48px", "image-rendering": "pixelated"}, [])
        ])
      ]),
    ]
  )

App.Kaelin.Draw.draft.croni: String
"data:image/gif;base64,"
