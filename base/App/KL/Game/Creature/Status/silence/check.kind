App.KL.Game.Creature.Status.silence.check(
  creature: App.KL.Game.Creature
): Bool

  let status = creature@status
  case status {
    nil:
      false
    cons:
      case status.head { 
        silence: if I32.gtn(status.head.duration, 0) then true   
              else false
      }default false
  }
