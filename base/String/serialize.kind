String.serialize.char_to_hex16(chr: Char): String
  String.pad_left(4, '0', U16.show_hex(chr))

String.serialize.go(str: String, result: String): String
  case str {
    nil: result
    cons: String.serialize.go(str.tail, result | String.serialize.char_to_hex16(str.head))
  }

String.serialize(str: String): String
  "0x" | String.serialize.go(str, "")
