String.serialize_ascii.char_to_hex8(chr: Char): String
  String.pad_left(2, '0', U16.show_hex(chr))

String.serialize_ascii.go(str: String, result: String): String
  case str {
    nil: result
    cons: String.serialize_ascii.go(str.tail, result | String.serialize_ascii.char_to_hex8(str.head))
  }

String.serialize_ascii(str: String): String
  "0x" | String.serialize_ascii.go(str, "")
