Kind.Parser.dom: Parser<Kind.Term>
  Parser {
    get term = Kind.Parser.dom.node
    case term {
      left: Parser { return term.value }
      right:
        let resu = Kind.Term.ref("DOM.node")
        let resu = Kind.Term.app(resu, Kind.Term.str("div"))
        let resu = Kind.Term.app(resu, empty_map)
        let resu = Kind.Term.app(resu, empty_map)
        let resu = Kind.Term.app(resu, term.value)
        Parser { return resu }
    }
  }

// main parser
Kind.Parser.dom.node: Parser<Either<Kind.Term, Kind.Term>>
  Parser.block!("DOM.node", Parser {
    Kind.Parser.text("<")

    // name of tag
    get tag = Kind.Parser.name1
    Kind.Parser.spaces

    // props and style
    get props = Parser.until!(Kind.Parser.text(">"), Kind.Parser.dom.prop)
    let props = Kind.Parser.dom.gen_prop(props)

    // children
    get children = Parser.many!(Parser.choice!([
      Kind.Parser.dom.node,
      Kind.Parser.dom.leaf,
    ]))
    let children = Kind.Parser.dom.transform_children(children)

    // end of tag
    Kind.Parser.text("</"| tag |">")
    
    // creation of dom 
    let term = Kind.Term.ref("DOM.node")
    let term = Kind.Term.app(term, Kind.Term.str(tag))
    let term = Kind.Term.app(term, props@fst)
    let term = Kind.Term.app(term, props@snd)
    let term = Kind.Term.app(term, children)

    return Either.left!!(term)
  })

// helpers for dom's for's
empty_list: Kind.Term 
  Kind.Term.app(Kind.Term.ref("List.nil"), Kind.Term.hol(Bits.e))

list_cons: Kind.Term
  Kind.Term.app(Kind.Term.ref("List.cons"), Kind.Term.hol(Bits.e))

empty_map: Kind.Term 
  Kind.Term.app(Kind.Term.ref("Map.new"),  Kind.Term.hol(Bits.e))

