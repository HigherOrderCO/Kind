// for..in of dom 
Kind.Parser.dom.for: Parser<Kind.Term>
  Kind.Parser.block("for_dom", Parser {
    // read variable
    Kind.Parser.text("for ")
    get elem = Kind.Parser.name1

    // read list
    Kind.Parser.text("in")
    get list = Kind.Parser.term
    
    // read return 
    Kind.Parser.text(":")
    get loop = Kind.Parser.term

    // put all elements inside one list [] 
    let term = Kind.Term.ref("List.fold")
    let term = Kind.Term.app(term, Kind.Term.hol(Bits.e))
    let term = Kind.Term.app(term, list)
    let term = Kind.Term.app(term, Kind.Term.hol(Bits.e))
    let term = Kind.Term.app(term, empty_list)
    let lamb = Kind.Term.lam(elem, (i) Kind.Term.lam("placeholder", (b) Kind.Term.app(Kind.Term.app(list_cons, loop), b)))
    let term = Kind.Term.app(term, lamb)
    
    // let root = Kind.Parser.dom.for.wrapper(term)
    return term
  })

// for..in map of dom
Kind.Parser.dom.formap: Parser<Kind.Term>
  Kind.Parser.block("formap_dom", Parser {
    // read variable
    Kind.Parser.text("for ")
    get key  = Kind.Parser.name1
    Kind.Parser.text(":")
    get value = Kind.Parser.name1

    // read list
    Kind.Parser.text("in")
    get map = Kind.Parser.term
    
    // read return 
    Kind.Parser.text(":")
    get loop = Kind.Parser.term

    // put all elements inside one list [] 
    let term = Kind.Term.ref("BBT.for")
    let term = Kind.Term.app(term, Kind.Term.hol(Bits.e))
    let term = Kind.Term.app(term, Kind.Term.hol(Bits.e))
    let term = Kind.Term.app(term, map)
    let term = Kind.Term.app(term, Kind.Term.hol(Bits.e))
    let term = Kind.Term.app(term, empty_list)
    let lamb = Kind.Term.lam(key, (k) Kind.Term.lam(value, (v) Kind.Term.lam("placeholder", (z) Kind.Term.app(Kind.Term.app(list_cons, loop), z))))
    let term = Kind.Term.app(term, lamb)
    
    // let root = Kind.Parser.dom.for.wrapper(term)
    return term
  })

// transform list of Kind.Term in a Kind.Term representing a list
Kind.Parser.dom.transform_children(a: List<Either<Kind.Term, Kind.Term>>): Kind.Term
  case a {
    nil: 
      Kind.Term.app(Kind.Term.ref("List.nil"), Kind.Term.hol(Bits.e))
    cons:
      case a.head {
        left:
          let term = Kind.Term.app(Kind.Term.ref("List.cons"), Kind.Term.hol(Bits.e))
          let term = Kind.Term.app(term, a.head.value)
          let term = Kind.Term.app(term, Kind.Parser.dom.transform_children(a.tail))
          term
        right:
          let term = Kind.Term.app(Kind.Term.ref("List.concat"), Kind.Term.hol(Bits.e))
          let term = Kind.Term.app(term, a.head.value)
          let term = Kind.Term.app(term, Kind.Parser.dom.transform_children(a.tail))
          term
      }
  }

// parser of a node leaf
// can be a dynamic DOM or a text
Kind.Parser.dom.leaf: Parser<Either<Kind.Term, Kind.Term>>
  Parser.block!("DOM_leaf", Parser {
    get term = Parser.choice!([
      Kind.Parser.dom.for,
      Kind.Parser.dom.formap,
      Kind.Parser.dom.dynamic,
      Kind.Parser.dom.text
    ])

    return Either.right<Kind.Term, Kind.Term>(term)
  })

// parser of a dynamic DOM
// the dynamic DOM must be inside {  }
// the dynamic DOM can be:
// - any kind term that returns a DOM
Kind.Parser.dom.dynamic: Parser<Kind.Term>
  Kind.Parser.block("DOM_dynamic", Parser {
    Kind.Parser.text("{")
    get item = Parser.choice!([
      Kind.Parser.term
    ])
    Kind.Parser.text("}")
    
    let term = Kind.Term.ref("List.cons")
    let term = Kind.Term.app(term, Kind.Term.hol(Bits.e))
    let term = Kind.Term.app(term, item)
    let term = Kind.Term.app(term, empty_list)
    return term
  })

// parsers dom text
// it is the leaf
Kind.Parser.dom.text: Parser<Kind.Term>
  Kind.Parser.block("DOM_text", Parser {
    let term = Kind.Term.ref("DOM.text")
    get expr = Kind.Parser.term
    let item = Kind.Term.app(term, expr)
    
    let term = Kind.Term.ref("List.cons")
    let term = Kind.Term.app(term, Kind.Term.hol(Bits.e))
    let term = Kind.Term.app(term, item)
    let term = Kind.Term.app(term, empty_list)
    return term
  })

// parses nothing
Kind.Parser.dom.none: Parser(DOM)
  Parser {
    Kind.Parser.text("")
    return DOM.text("")
  }

// prop type
Prop: Type
  Pair<String, Kind.Term>

// parser one prop
Kind.Parser.dom.prop: Parser<Prop>
  Parser {
    get prop  = Kind.Parser.name1
    let prop  = Kind.Parser.dom.prop.camel_to_kebab(prop)
    Kind.Parser.text("=")
    get value = Kind.Parser.term
    Kind.Parser.spaces
    return Pair.new!!(prop, value)
  }

Kind.Parser.dom.prop.camel_to_kebab(str: String): String
  String.reverse(Kind.Parser.dom.prop.camel_to_kebab.go(str, ""))

Kind.Parser.dom.prop.camel_to_kebab.go(str: String, result: String): String
  case str {
    nil: result
    cons: 
      if Char.is_upper(str.head) then
        Kind.Parser.dom.prop.camel_to_kebab.go(str.tail, String.cons(Char.to_lower(str.head), String.cons('-', result)))
      else
        Kind.Parser.dom.prop.camel_to_kebab.go(str.tail, String.cons(str.head, result))
  }

