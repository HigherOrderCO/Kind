Web.Kind.draw_page_apps(stt: Web.Kind.State): DOM
  // Content
  // ----------
  let games =
    let with_banner = 
      DOM.node("div", {}, {
      "display": "flex"
      "justify-content": "flex-start"
      "flex-direction": "row"
      "flex-wrap": "wrap"
    }, Web.Kind.content_apps)

    let no_banner = 
      DOM.node("div", {}, {
        "margin-top": "2em"
      }, [Web.Kind.content_apps_text])

    DOM.node("div", {"id": "game-container"}, {}, [
      Web.Kind.comp.heading(Web.Kind.typography.h1, "Games")
      with_banner
      no_banner
    ])
  

  Web.Kind.comp.page("apps", stt, [
        games])