Web.Kaelin.Skill.updated_player_status(
player: Web.Kaelin.Player,
mod: Web.Kaelin.Skill.Modifier.status,
value: I32
): Web.Kaelin.Player
open player
  case mod {
    cleanse: Web.Kaelin.Player.new(player.addr, player.team, player.current_hp, []) 
    // Modify cleanse and add exceptions in the future
  }default Web.Kaelin.Player.new(player.addr, player.team, player.current_hp, mod & player.current_status)


