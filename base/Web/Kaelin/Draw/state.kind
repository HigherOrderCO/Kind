// function to draw according the state
Web.Kaelin.Draw.state(img: VoxBox, state: Web.Kaelin.State): VoxBox
  case state {
      game:
        let img = Web.Kaelin.Draw.state.background(state.map, state.cast_info, state.env_info, img)
        let img = Web.Kaelin.Draw.state.mouse_ui(state.env_info, img)
        let img = Web.Kaelin.Draw.state.players(state.map, state.players, img) //Draws creatures - should it be changed to state.creatures?
        
        img
  } default img



