Web.Kaelin.Draw.support.area_of_effect(
  cast_info: Web.Kaelin.CastInfo,
  coord: Web.Kaelin.Coord,
  coord_nat: Nat,
  area: NatMap(Web.Kaelin.Skill.area.indicator)
  ): Maybe(Web.Kaelin.Skill.area.indicator)
    open cast_info
      case cast_info.hex_effect {
        skill:
        if List.any!(Web.Kaelin.Coord.eql(cast_info.mouse_pos), cast_info.range) then 
          NatMap.get!(coord_nat,area)
        else
          none 
      } default none

