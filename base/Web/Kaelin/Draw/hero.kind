// draw hero in some canvas coordinate (allows pass hexagons)
Web.Kaelin.Draw.hero(cx: U32, cy: U32, z: U32, hero: Web.Kaelin.Hero, img: VoxBox): VoxBox
  open hero
  open hero.ent
  let aux_y = Web.Kaelin.Resources.hexagon_radius
  let aux_y = U32.sub(aux_y, U32.div(aux_y, 2u))
  let cy = U32.sub(cy, aux_y)
  VoxBox.Draw.image(cx, cy, 0u, hero.ent.img, img)